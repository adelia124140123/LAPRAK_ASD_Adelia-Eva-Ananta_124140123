#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Masukkan ukuran array: ";
    cin >> n;

    int arr[n];
    int *ptr = arr; // pointer ke awal array

    // Menginput elemen array
    cout << "Masukkan elemen: ";
    for (int i = 0; i < n; i++) {
        cin >> *(ptr + i);  // pakai pointer aritmatika
    }

    // Menampilkan array sebelum dibalik
    cout << "Array sebelum dibalik: ";
    for (int i = 0; i < n; i++) {
        cout << *(ptr + i) << " ";
    }
    cout << endl;

    // Proses menukar elemen dengan pointer
    int *awal = ptr;          // pointer ke elemen pertama
    int *akhir = ptr + n - 1; // pointer ke elemen terakhir

    while (awal < akhir) {
        int temp = *awal;
        *awal = *akhir;
        *akhir = temp;

        awal++;
        akhir--;
    }

    // Menampilkan array sesudah dibalik
    cout << "Array sesudah dibalik: ";
    for (int i = 0; i < n; i++) {
        cout << *(ptr + i) << " ";
    }
    cout << endl;

    return 0;
}
